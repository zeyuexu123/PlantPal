<h1 class="text-2xl font-bold mb-4">Search Plants</h1>

<form method="POST" action="/search" class="mb-6 flex items-center gap-2">
    <input
        type="text"
        name="query"
        value="{{query}}"
        placeholder="Enter plant name"
        class="border border-gray-300 rounded-lg px-4 py-2 w-full focus:ring-2 focus:ring-green-500"
        required
    >
    <button 
        type="submit"
        class="bg-green-700 text-white px-4 py-2 rounded-lg hover:bg-green-800 transition"
    >
        Search
    </button>
</form>

{{#if plants}}
    <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        {{#each plants}}
        <li class="border border-gray-200 rounded-lg p-4 bg-white shadow-sm hover:bg-green-50 transition">
            <h2 class="font-semibold text-lg text-gray-800">{{this.common_name}}</h2>
            <p class="text-gray-600 italic">{{this.scientific_name}}</p>
            <p class="text-gray-600 text-sm">Family: {{this.family}}</p>
            <p class="text-gray-500 text-sm">Genus: {{this.genus}}</p>
            <p class="text-gray-400 text-sm">Year: {{this.year}}</p>
            <img src="{{this.image_url}}" class="mt-3 rounded-lg w-full h-48 object-cover">
        </li>
        {{/each}}
    </ul>
{{/if}}