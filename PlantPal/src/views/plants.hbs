<h2 class="text-2xl font-bold mb-6 text-green-700 text-center">Your Plants</h2>

<div class="max-w-md mx-auto bg-white shadow-md rounded-xl p-6 space-y-4">
    {{#if plants.length}}
        <ul class="space-y-4">
        {{#each plants}}
            <li class="border border-gray-200 rounded-lg p-4 hover:bg-green-50 transition relative">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="font-semibold text-lg text-gray-800">{{name}}</p>
                        <p class="text-gray-600">Species: {{species}}</p>
                        <p class="text-gray-600">Water every {{waterIntervalDays}} days</p>
                        <p class="text-gray-600">
                            Last watered: {{#if lastWatered}}{{lastWatered}}{{else}}N/A{{/if}}
                        </p>
                    </div>

                    <form action="/plants/delete/{{_id}}" method="POST"
                          onsubmit="return confirm('Are you sure you want to delete this plant?');"
                          class="absolute bottom-3 right-3">
                        <button type="submit"
                                class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600 transition">
